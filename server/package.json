{
    "name": "trinit-server",
    "version": "1.0.0",
    "description": "Server for trinit'24",
    "main": "index.js",
    "license": "MIT",
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/cookie-parser": "^1.4.6",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.8",
        "lint-staged": "^15.2.0",
        "nodemon": "^3.0.2",
        "prettier": "^3.1.1",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    },
    "dependencies": {
        "axios": "^1.6.5",
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "husky": "^8.0.3",
        "jsonwebtoken": "^9.0.2",
        "mongoose": "^8.0.4",
        "morgan": "^1.10.0",
        "razorpay": "^2.9.2",
        "socket.io": "^4.7.4",
        "winston": "^3.11.0"
    },
    "scripts": {
        "start": "node build/index.js",
        "build": "yarn checkLogs && tsc",
        "compile": "yarn build && yarn start",
        "dev": "nodemon -e .ts --exec \"yarn compile\"",
        "format": "prettier --ignore-path .gitignore --write \"**/*.+(js|ts|json)\"",
        "prepare": "husky install",
        "checkLogs": "if ! test -d logs;then mkdir logs && touch logs/error.log && touch logs/combined.log && touch logs/warning.log;fi",
        "seedTutor": "tsc && node build/seeders/tutorSeeder.js"
    },
    "lint-staged": {
        "*.{ts,tsx}": [
            "yarn format"
        ]
    }
}
